<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unique_upgrade.ReliefPro.LoginActivity"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
      >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/reg_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_login"

                />



            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:drawableStart="@drawable/emaillogo"
                android:background="@drawable/custom_btn_reg"
                android:textColorHint="#7A7575"
                android:layout_marginTop="15dp"
                android:textCursorDrawable="@android:color/holo_blue_dark"
                android:layout_below="@+id/reg_image"
                android:hint="Enter Email"
                android:textColor="@android:color/black"
                android:drawablePadding="10dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:singleLine="false"
              />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_below="@+id/login_email"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"


                >

            </com.google.android.material.textfield.TextInputLayout>
            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_email"
                android:background="@drawable/custom_btn_reg"
                android:textColorHint="#7A7575"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/black"
                android:drawablePadding="10dp"
                android:textCursorDrawable="@android:color/holo_blue_dark"
                android:drawableStart="@drawable/pass"
                android:hint="Enter Password"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:inputType="textPassword"
                android:padding="8dp"
                android:singleLine="false"
                android:autofillHints="" />




            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_btn"
                android:text="Don't have account? click here."
                android:textStyle="bold"
                android:textSize="14sp"
                android:includeFontPadding="true"
                android:textColor="#376BA0"
                android:layout_marginLeft="17dp"
                android:textAllCaps="false"
                android:layout_marginRight="17dp"
                android:layout_below="@+id/login_btn"

                style="@style/Widget.AppCompat.Button.Borderless.Colored" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forget_acc_link"
                android:textSize="13sp"
                android:text="Forgot Password ?"

                android:layout_alignParentEnd="true"
                android:layout_below="@id/login_password"
                android:textColor="#3D3B3B"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="27dp"
                android:layout_marginStart="15dp"
               />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_btn"
                android:text="Login"
                android:textStyle="bold"
                android:textSize="20sp"
               android:backgroundTint="#FF4585EF"
                android:textColor="#FEFCFC"
                android:layout_marginLeft="17dp"
                android:textAllCaps="false"
                android:padding="8dp"
                android:layout_marginRight="17dp"
                android:layout_below="@+id/forget_acc_link"
                android:layout_marginTop="10dp"
                android:background="@drawable/btnbg"
            />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:layout_below="@+id/signup_btn"
    android:layout_marginTop="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:id="@+id/mobile_login"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button"
                android:backgroundTint="#D5D5D5"
                android:padding="16dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                app:drawableStartCompat="@drawable/mobile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:id="@+id/fb_login"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button"
        android:backgroundTint="#D5D5D5"
        android:padding="16dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:drawableStartCompat="@drawable/ic_facebook_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:id="@+id/google_login"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button"
                android:backgroundTint="#D5D5D5"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                app:drawableStartCompat="@drawable/ic_google_icon" />


</LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>