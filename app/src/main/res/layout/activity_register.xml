<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:id="@+id/reg_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/reg"
                />

            <EditText
                android:id="@+id/reg_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#110F0F"
                android:maxLength="15"
                android:background="@drawable/custom_btn_reg"
                android:textColorHint="#7A7575"
                android:layout_marginTop="5dp"
                android:textCursorDrawable="@android:color/holo_blue_dark"
                android:layout_below="@+id/reg_image"
                android:hint="Full name"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:drawablePadding="10dp"

                android:singleLine="false"
                android:autofillHints="" />

            <EditText
                android:id="@+id/reg_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1A1616"

                android:background="@drawable/custom_btn_reg"
                android:textColorHint="#7A7575"
                android:textCursorDrawable="@android:color/holo_blue_dark"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/reg_username"
                android:hint="Contact Number"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
            android:inputType="number"
                android:padding="8dp"
                android:maxLength="10"
                android:drawablePadding="10dp"
                android:singleLine="false"
          />

            <EditText
                android:id="@+id/reg_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#231818"
                android:layout_below="@+id/reg_email"
                android:background="@drawable/custom_btn_reg"
                android:textColorHint="#7A7575"
                android:layout_marginTop="30dp"
                android:textCursorDrawable="@android:color/holo_blue_dark"
                android:hint="Email"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:maxLength="25"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:drawablePadding="10dp"
                android:singleLine="false"
                android:autofillHints="" />


            <EditText
                android:id="@+id/reg_confirm_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1B1616"
                android:textCursorDrawable="@android:color/holo_blue_dark"
                android:layout_below="@+id/reg_password"
                android:background="@drawable/custom_btn_reg"
                android:maxLength="12"
                android:textColorHint="#7A7575"
                android:layout_marginTop="30dp"

                android:hint="Date of Birth"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:inputType="date"
                android:padding="8dp"
                android:drawablePadding="10dp"
                android:singleLine="false"
                android:autofillHints="" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_confirm_pass"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"/>
            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/create_acc_btn"
                android:text="Create New account"
                android:textStyle="bold"
                android:textSize="22sp"

                android:textColor="#FFFFFF"
                android:layout_marginLeft="17dp"
                android:textAllCaps="false"
                android:padding="8dp"
                android:backgroundTint="#FF4585EF"
                android:background="@drawable/btnbg"
                android:layout_marginRight="17dp"
                android:layout_below="@+id/reg_confirm_pass"
                android:layout_marginTop="90dp"
                />



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>